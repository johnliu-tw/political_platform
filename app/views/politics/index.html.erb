<p id="notice"><%= notice %></p>

<h1>Politics</h1>
<%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Politician</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @politics.each do |politic| %>
      <tr>
        <td><%= politic.description %></td>
        <td><%= politic.politician_id %></td>
        <td><%= link_to 'Show', politic %></td>
        <td><%= link_to 'Edit', edit_politic_path(politic) %></td>
        <td><%= link_to 'Destroy', politic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Politic', new_politic_path %>
